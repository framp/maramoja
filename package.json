{
  "name": "maramoja",
  "version": "0.0.1",
  "description": "An isomorphic, no-boilerplate app",
  "repository": "https://github.com/framp/maramoja",
  "main": "./index.js",
  "scripts": {
    "start": "node ./index.js",
    "build": "./node_modules/browserify/bin/cmd.js --extension=.jsx lib/client.jsx > public/js/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Federico Rampazzo <frampone@gmail.com> (http://framp.me)",
  "license": "MIT",
  "dependencies": {
    "whatwg-fetch": "^0.9.0"
  },
  "devDependencies": {
    "browserify": "^10.2.3",
    "browserify-shim": "^3.8.8",
    "es6ify": "^1.6.0",
    "reactify": "^1.1.1",
    "babel": "^5.2.17"
  },
  "browserify": {
    "transform": [
      "reactify",
      "es6ify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "react": "global:React",
    "react-router": "global:ReactRouter",
    "react-router-form": "global:ReactRouterForm"
  }
}
